<div class="container mt-3">
    <div class="row">
        <div class="col-xs-12 col-md-12 col-sm-10 m-auto">
            <%- include ('../partials/message')%>
            <h3>Orders</h3>
            <input class="form-control" id="myInput" type="text" placeholder="Search..">
            <hr>
            <table class="table table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>Department</th>
                        <th>Subject</th>
                        <th>Price</th>
                        <th>Chat</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <%if(orders.length !=0){%>
                    <%for(var i=0;i< orders.length;i++){%>
                    <tr>
                        <td><%=orders[i].notes.department %></td>
                        <td><%=orders[i].notes.subject%></td>
                        <td><%=orders[i].price%></td>
                        <td><a href="/user/orders/chat/<%=orders[i]._id%>"><i class="fa fa-commenting-o"></i></a></td>
                        <%if(orders[i].status == 1){%>
                        <td style="color: 	#e7b416;"><b>Pending Approval <i class="fa fa-clock-o"></i></b></td>
                        <%}else if(orders[i].status == 2){%>
                        <td style="color:green"><b>Approved <i class="fa fa-check"></i></b></td>
                        <%}else{%>
                        <td style="color: red;"><b>Rejected <i class="fa fa-ban"></i></b></td>
                        <%}%>
                                                    </tr>
                                                    <%}%>
                        <%}else{%>
                        <h3>You Have not Orderes any Notes</h3>
                        <%}%>
                                                    </tbody>
                                                </table>
                                        </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>