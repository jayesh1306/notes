<div class="container mt-3">
    <div class="row">
        <div class="col-xs-12 col-md-12 col-sm-10 m-auto">
            <%- include ('../partials/message')%>
            <h3>Your notes for Selling</h3>
            <table class="table table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>Department</th>
                        <th>Subject</th>
                        <th>Price</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <%if(sales.length !=0){%>
                    <%for(var i=0;i< sales.length;i++){%>
                    <tr>
                        <td><%=sales[i].notesId.department %></td>
                        <td><%=sales[i].notesId.subject%></td>
                        <td><%=sales[i].price%></td>
                        <%if(sales[i].status == 1){%>
                        <td style="color: red;">Sold Out</td>
                        <%}else{%>
                        <td style="color:red">No One Bought</td>
                        <%}%>
                    </tr>
                    <%}%>
                        <%}else{%>
                        <h3>You Have not posted any Notes to Sell</h3>
                        <%}%>
                                            </tbody>
                                        </table>
                                </div>
    </div>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>