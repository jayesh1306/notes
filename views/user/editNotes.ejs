<div class="container mt-5">
    <div class="row">
        <div class="col-xs-12 col-md-8 col-sm-6 m-auto">
            <h3>Edit note of <%=note.notesId.department%></h3>
            <hr>
            <%- include ('../partials/message.ejs') %>
            <form action="/user/sales/edit/<%=note.notesId._id%>" class="needs-validation" method="POST" novalidate>
                <div class="form-group">
                    <label for="uname">Name:</label>
                    <input type="text" autofocus class="form-control" id="subject" value="<%=note.notesId.subject%>"
                        name="username" required disabled>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="form-group">
                    <label for="pwd">Price :</label>
                    <input type="number" class="form-control" id="pwd" value="<%=note.price%>" name="price" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>