<div class="container mt-5">
    <div class="row">
        <div class="col-xs-12 col-md-8 col-sm-6 m-auto">
            <form action="/auth/changePassword" method="post">
                <div class="form-group">
                    <label for="password">New Password : </label>
                    <input type="password" autofocus class="form-control" name="password1" id="pass1" required>
                </div>
                <div class="form-group">
                    <label for="password">Confirm Password : </label>
                    <input type="password" onkeyup="check()" class="form-control" name="password2" id="pass2" required>
                    <div id="alert" style="display:none;color:red">Password Do not Match</div>
                </div>
                <div class="form-group">
                    <button id="btn" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function check(e) {
        if (document.getElementById('pass1').value == document.getElementById('pass2').value) {
            document.getElementById('alert').style.display = 'none'
            document.getElementById('btn').disabled = false

        } else {
            document.getElementById('btn').disabled = true;
            document.getElementById('alert').style.display = 'block'
        }
    }

</script>